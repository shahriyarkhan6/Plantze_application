<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#d8dbe2"
    android:padding="16dp">

    <!-- Title TextView for the question -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How often do you waste food or throw away uneaten leftovers?"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#1b1b1e"
        android:layout_marginBottom="20dp" />

    <!-- RadioGroup for food waste options -->

    <!-- Submit Button -->
    <RadioGroup
        android:id="@+id/foodWasteRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radioNever"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Never" />

        <RadioButton
            android:id="@+id/radioRarely"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rarely" />

        <RadioButton
            android:id="@+id/radioOccasionally"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Occasionally" />

        <RadioButton
            android:id="@+id/radioFrequently"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Frequently" />
    </RadioGroup>

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Next"
        android:layout_marginTop="20dp" />

</LinearLayout>
