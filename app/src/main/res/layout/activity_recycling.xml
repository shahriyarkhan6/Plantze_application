<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How often do you recycle?"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp" />

    <TextView
        android:id="@+id/emissionsDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adjusted Emissions: 0 COâ‚‚ per year"
        android:textSize="18sp"
        android:gravity="center"
        android:padding="16dp" />

    <RadioGroup
        android:id="@+id/recyclingGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rb_never"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Never" />

        <RadioButton
            android:id="@+id/rb_occasional"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Occasionally" />

        <RadioButton
            android:id="@+id/rb_frequent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Frequently" />

        <RadioButton
            android:id="@+id/rb_always"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Always" />
    </RadioGroup>

    <Button
        android:id="@+id/nextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_marginTop="16dp" />

</LinearLayout>
