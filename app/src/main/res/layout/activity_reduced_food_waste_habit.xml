<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.habit_tracking.ReducedFoodWasteHabitActivity">

    <!-- TextView to display food waste reduction days -->
    <TextView
        android:id="@+id/foodWasteDaysTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Youâ€™ve reduced food waste for 0 days."
        android:layout_marginLeft="32dp"
        android:textSize="18sp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Button to increment food waste reduction days -->
    <Button
        android:id="@+id/incrementFoodWasteDaysButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add a Food Waste-Free Day"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/foodWasteDaysTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
