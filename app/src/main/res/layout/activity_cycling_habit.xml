<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.habit_tracking.CyclingHabitActivity">

    <!-- TextView to display cycling days -->
    <TextView
        android:id="@+id/cyclingDaysTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Congratulations! You have spent 0 days cycling instead of driving."
        android:textSize="18sp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Button to increment cycling days -->
    <Button
        android:id="@+id/incrementCyclingDaysButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Increase Cycling Days"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/cyclingDaysTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
