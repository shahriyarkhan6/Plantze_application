<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d8dbe2"
    tools:context=".CarDistanceActivity">

    <!-- Title text -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How many km do you drive in a year?"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#1b1b1e"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp" />

    <!-- Distance selection options -->
    <RadioGroup
        android:id="@+id/distanceGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="16dp">

        <RadioButton
            android:id="@+id/radioUpTo5000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Up to 5,000 km" />

        <RadioButton
            android:id="@+id/radio5000to10000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5,000–10,000 km" />

        <RadioButton
            android:id="@+id/radio10000to15000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10,000–15,000 km" />

        <RadioButton
            android:id="@+id/radio15000to20000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15,000–20,000 km" />

        <RadioButton
            android:id="@+id/radio20000to25000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20,000–25,000 km" />

        <RadioButton
            android:id="@+id/radioMoreThan25000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="More than 25,000 km" />
    </RadioGroup>

