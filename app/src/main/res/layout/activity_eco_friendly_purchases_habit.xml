<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.habit_tracking.EcoFriendlyPurchasesHabitActivity">

    <!-- TextView to display the number of eco-friendly purchases -->
    <TextView
        android:id="@+id/ecoPurchasesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Youâ€™ve made 0 eco-friendly purchases this year."
        android:textSize="18sp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Button to increment eco-friendly purchases -->
    <Button
        android:id="@+id/incrementEcoPurchasesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log an Eco-Friendly Purchase"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/ecoPurchasesTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
