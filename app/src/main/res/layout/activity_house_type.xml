<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title TextView for the question -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What type of home do you live in?"
        android:textSize="18sp"
        android:layout_marginBottom="20dp" />

    <!-- RadioGroup for food waste options -->
    <RadioGroup
        android:id="@+id/houseTypeRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radioDetached"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detached house" />

        <RadioButton
            android:id="@+id/radioSemi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Semi-detached house" />

        <RadioButton
            android:id="@+id/radioTownhouse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Townhouse" />

        <RadioButton
            android:id="@+id/radioCondo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Condo/Apartment" />

        <RadioButton
            android:id="@+id/radioOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other" />
    </RadioGroup>

    <!-- Result TextView to display the current or total carbon emission -->
    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Carbon Emission: 0 COâ‚‚"
        android:textSize="16sp"
        android:layout_marginTop="20dp" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_marginTop="20dp" />

</LinearLayout>