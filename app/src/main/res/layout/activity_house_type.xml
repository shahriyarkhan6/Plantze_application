<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#d8dbe2"
    android:padding="16dp">

    <!-- Title TextView for the question -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What type of home do you live in?"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#1b1b1e"
        android:layout_marginBottom="20dp" />

    <!-- RadioGroup for house type options -->
    <RadioGroup
        android:id="@+id/houseTypeRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radioDetached"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detached house" />

        <RadioButton
            android:id="@+id/radioSemi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Semi-detached house" />

        <RadioButton
            android:id="@+id/radioTownhouse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Townhouse" />

        <RadioButton
            android:id="@+id/radioCondo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Condo/Apartment" />

        <RadioButton
            android:id="@+id/radioOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other" />
    </RadioGroup>

    <!-- Next Button -->
    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Next"
        android:layout_marginTop="20dp" />

</LinearLayout>