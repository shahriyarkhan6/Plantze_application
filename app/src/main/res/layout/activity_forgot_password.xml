<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:padding="16dp"
    android:id="@+id/main"
    tools:context=".ui.login.ForgotPasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-130dp"
            android:src="@drawable/planetzelogo"/>

        <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginTop="-140dp"
            android:src="@drawable/account_icon"/>

        <TextView
            android:id="@+id/reset_instruction_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please enter your email below. A link will be sent to it for you to reset your password."
            android:textSize="22sp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="16dp"
            tools:ignore="HardcodedText" />


        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:hint="Email:"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="20sp"
            android:padding="12dp"
            android:inputType="textEmailAddress"
            android:id="@+id/email"
            tools:ignore="HardcodedText" />



        <android.widget.Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send reset password link"
            android:textColor="@color/black"
            android:background="@drawable/rounded_button_shape"
            android:backgroundTint="#d8dbe2"
            android:padding="18dp"
            android:layout_marginTop="40dp"
            android:textSize="20sp"
            android:id="@+id/send_reset_password_button"
            tools:ignore="HardcodedText" />




    </LinearLayout>






</RelativeLayout>